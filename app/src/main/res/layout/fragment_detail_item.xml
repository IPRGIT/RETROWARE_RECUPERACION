<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailItemFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/caratula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre juego"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/sfpixelateshaded"
            android:maxLines="3"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/caratula"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/anio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ihatecomicsans"
            android:layout_marginLeft="2dp"
            android:textSize="12dp"
            android:text="AÃ±o: "
            app:layout_constraintTop_toBottomOf="@+id/titulo"
            app:layout_constraintStart_toEndOf="@id/caratula"/>

        <TextView
            android:id="@+id/genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="genero"
            app:layout_constraintTop_toBottomOf="@+id/anio"
            app:layout_constraintStart_toEndOf="@+id/caratula"/>


        <TextView
            android:id="@+id/plataformas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plataformas: "
            app:layout_constraintTop_toBottomOf="@+id/genero"
            app:layout_constraintStart_toEndOf="@+id/caratula"/>


        <TextView
            android:id="@+id/plataforma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plataformas"
            app:layout_constraintTop_toBottomOf="@+id/plataformas"
            app:layout_constraintStart_toEndOf="@+id/caratula"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>